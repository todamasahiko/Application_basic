<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="field">
  <label>Title</label>
  <br><%= f.text_field :title %>
</div>

<div class="field">
  <label>Body</label>
  <br><%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
